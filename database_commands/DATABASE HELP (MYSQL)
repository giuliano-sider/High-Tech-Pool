DATABASE HELP (MYSQL)

-- invoke with
mysql -u <user> -h <host, localhost by default> -p



-- some good mysql prompt commands

create user 'usuario'@'host' identified by 'senha';
grant all privileges on High_Tech_Pool.* to 'pool'@'localhost';
flush privileges;


show databases;

select database(); -- which is the current selected database

use <database>; -- select a database

-- when you have a database selected:

show tables;

-- double dash comments require a space after the double dash

source <script.sql>